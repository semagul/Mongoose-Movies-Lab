<h2>All the celebrities</h2>


{{#each celebrityList}}
    <a href="/celebrities/{{_id}}">
        <p>{{name}}</p>
    </a>

    <p>Occupation {{occupation}}</p>
    <p>Catchphrase {{catchPhrase}}</p>

    <form action="/celebrities/{{_id}}/delete" method="POST">
    <button type="submit">Delete the celebrity</button>
    </form>

    <form action="/celebrities/{{_id}}/edit" method="GET">
    <button type="submit">Edit the celebrity</button>
    </form>
    
{{/each}}
<br>

<a href='/celebrities/new'>Add a new celebrity</a>





